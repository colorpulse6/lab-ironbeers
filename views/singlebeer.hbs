<div>
    {{#each beerFromApi}}
    
    <div class="each-beer">
        <img src={{this.image_url}}>
        <a href="/beers/{{this.id}}" class="beer-name">{{this.name}}</a>
        <p id="description">Description: {{this.description}}</p>
        <p>Tagline: {{this.tagline}}</p>
        <p>Food Pairing: {{this.food_pairing}}</p>
        <p>Brewer's Tips: {{this.brewers_tips}}</p>
        <p>Yeast: {{this.yeast}}</p>
    </div>
    
   
    
   
 {{/each}}
</div>